<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/edit_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ems="10"
            android:hint="キーワードを入力" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="検索" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_query_ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="急上昇 : "
            android:textColor="#FF0000" />

        <LinearLayout
            android:id="@+id/layout_query_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_query_ranking1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/item_text_selector"
                android:gravity="center"
                android:textColor="@color/genre_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_query_ranking2"
                android:layout_width="0dp"
                android:background="@drawable/item_text_selector"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/genre_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_query_ranking3"
                android:layout_width="0dp"
                android:background="@drawable/item_text_selector"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/genre_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/item_text_selector"
        android:gravity="center"
        android:text="ランキングをみる"
        android:textColor="@color/genre_text"
        android:textSize="12sp" />

    <GridView
        android:id="@+id/grd_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="15dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp" >
    </GridView>

</LinearLayout>